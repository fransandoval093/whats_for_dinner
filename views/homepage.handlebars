<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Look for a recipe:</h3>

    <form class="form new-recipe-form">
      <div class="form-group">
        <label for="ingredient-name">Ingredients:</label>
        <input class="form-input" type="text" id="ingredient-name" name="ingredient-name" />
      </div>
    </form>
  </div>

  {{#if recipes.length}}
  <div class="col-md-6 recipe-list">
    <h3>Recipes:</h3>

    {{#each recipes as |recipes|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/homepage/{{favorite.id}}">{{favorite.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{favorite.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/homepage.js"></script>